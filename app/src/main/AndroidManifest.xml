<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.assignment.demo.sampleapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/weatherappicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.starwarsApp"
        android:name="com.assignment.demo.sampleapp.di.SampleAppApplication"
        tools:targetApi="m">
        <activity android:name="com.assignment.demo.sampleapp.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.assignment.demo.sampleapp.view.MainActivity"
             android:windowSoftInputMode="stateHidden"></activity>

        <activity android:name="com.assignment.demo.sampleapp.weather.WeatherActivity"
            android:windowSoftInputMode="stateHidden"></activity>


    </application>

</manifest>